<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form method="POST" action="user/create-user">
                    <div class="mt-3 mb-3">
                        <h3>Create a new user: </h3>
                    </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" name="email" class="form-control" id="email" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="password" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">username</label>
                        <input type="text" name="username" class="form-control" id="username" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
            </div>
            </form>
            <div class="table-users mt-3">
                <h3>Table Users: </h3>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Email</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row"><%=index + 1%></th>
                                <td><%=item.email%></td>
                                <td><%=item.username%></td>
                                <td>
                                    <form style="display: inline;" method="get" action="/update-user/<%=item.id%>">
                                        <button class="btn btn-warning">Edit</button>
                                    </form>      
                                    <form style="display: inline;" method="post" action="/delete-user/<%=item.id%>">
                                    <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>